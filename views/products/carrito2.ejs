<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %>
<body>
    <header> 
        <div class="container-fluid">
            <div>
                <a href="/"><img class="logo"src="/img/logo.png" alt="logo"></a>
            </div>
            <%- include('../partials/navbar') %>
        </div>    
    </header>
    <section>
        <div class="banner-carrito">
            <h3>
                TU DESAFÍO
            </h3>
        </div>
    </section>
    <form action="/products/carrito2/:id" method="POST">
        <section class="carrito-compras">       
            <div class="container">
              <div class="row">
                    <div class="col-9">Desafío</div>
              </div>                
            </div>
        </section>
        <section>
            <div class="container">
                <div class="row" id="cuerpo-carrito">
                    <div class="col-9">
                        <img src="/img/img-equipos/<%= equi.img_equipo %>" class="imagen-carrito" alt="imagen de cancha">
                        <div class="reserva-fecha">
                            <div>
                                <p id="p-mobile"> <%= equi.nombre_equipo %> </p>
                                <p id="p-web"> <%= equi.nombre_equipo %> </p>
                                <input type="text" name="idEquipoD" id="idEquipoD" value="<%= equi.id %>" style="display: none"><br>
                            </div>                            
                            <div>
                                <label for="fecha">Fecha de partido</label><br>
                                <input class="dates-canchas" type="date" name="fecha" id="fecha" min="<%= moment().format('YYYY-MM-DD') %>" max="<%= moment().add(1, 'month').format('YYYY-MM-DD') %>">
                            </div>
                            <div class="campos-canchas">
                                <label for="formGroupExampleInput2" class="form-label horario-canchas label-canchas">Horario:</label>
                                <select class="form-control inputs-canchas" name="franjaHoraria" id="franjaHoraria">
                                    <% for( let fj of franjaHoraria ) { %>
                                        <option value="<%= fj.id  %>">
                                            <%= fj.detalle %>
                                        </option>
                                    <% } %>
                                </select>
                            </div> 
                        
                            <div class="campos-canchas">
                                <label for="formGroupExampleInput2" class="form-label horario-canchas label-canchas">Complejo:</label>
                                <select class="form-control inputs-canchas" name="complejo" id="complejo">
                                    <% for( let co of complejo ) { %>
                                        <option value="<%= co.id  %>">
                                            <%= co.nombre %>
                                        </option>
                                    <% } %>
                                </select>
                            </div>
                            <div class="col-1">
                                <label for="equipo" class="form-label">
                                    Selecciona tu equipo
                                </label><br>
                                <select id="equipo2" name='equipo2' >
                                    <% for( let a of e ) { %>
                                        <% if(a.equipo.borrado == 0) { %>
                                            <div class="mb-3">
                                                <option value="<%= a.equipo_id  %>"> 
                                                    <%= a.equipo.nombre_equipo %>
                                                </option>
                                            </div>
                                        <% } %>
                                    <% } %>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="btn-confirmar">
            <button type="submit" class="btn btn-primary">CONFRIMARR</button>
            <a href="/products/equipos" class="boton-volver-reservas">Volver a la reserva</a>
        </section>
    </form>
    <%- include('../partials/footer') %> 
    
</body>
</html>