                    <input type="checkbox" id="diasPosibles" value="5"> Viernes</input><br>                    
                    <input type="checkbox" id="diasPosibles" value="6"> Sábado</input><br>
                    <input type="checkbox" id="diasPosibles" value="7"> Domingo</input><br>
                    -->
                </div>
            
                <div class="mb-3">
                    <label for="restriccionEdad" class="form-label"><%= equipo.restriccionEdad %> </label>
                    <!--<select id="restriccionEdad" name="restriccionEdad">
                        <option value="1">Sin restricción</option>
                        <option value="2">Menores de 30 años</option>
                        <option value="3">Mayores de 30 años</option>
                        <option value="2">Menores de 40 años</option>
                        <option value="3">Mayores de 40 años</option>
                    </select>
                </div>
                -->
                <br>
                <!--<button type="submit" class="btn btn-primary">EDITAR</button>
                -->
                <a href="/products/editar-equipo/<%= equipo.id %>" class="btn btn-primary">EDITAR</a>
            </form>            
        </div> 
    </section>
    <%- include('../partials/footer') %>   
</body>
</html>